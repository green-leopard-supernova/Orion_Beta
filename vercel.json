{
  "version": 2,
  "name": "orion-trello-powerup",
  "builds": [
    {
      "src": "modules/trello-powerup/public/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "modules/trello-powerup/trello-api.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/trello/query",
      "destination": "/modules/trello-powerup/trello-api.js"
    },
    {
      "source": "/(.*)",
      "destination": "/modules/trello-powerup/public/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "ALLOWALL"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, X-Trello-Source"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
