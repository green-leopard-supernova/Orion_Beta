{
  "name": "whatsapp_message",
  "label": "WhatsApp Message",
  "description": "Custom object to track WhatsApp messages and interactions",
  "primaryDisplayProperty": "message_content",
  "requiredProperties": [
    "message_id",
    "phone_number",
    "message_type"
  ],
  "properties": [
    {
      "name": "message_id",
      "label": "Message ID",
      "type": "string",
      "fieldType": "text",
      "description": "Unique identifier for the WhatsApp message"
    },
    {
      "name": "phone_number",
      "label": "Phone Number",
      "type": "string",
      "fieldType": "text",
      "description": "WhatsApp phone number of the sender"
    },
    {
      "name": "message_type",
      "label": "Message Type",
      "type": "enumeration",
      "fieldType": "select",
      "options": [
        { "label": "Text", "value": "text" },
        { "label": "Button", "value": "button" },
        { "label": "Image", "value": "image" },
        { "label": "Document", "value": "document" },
        { "label": "Audio", "value": "audio" },
        { "label": "Video", "value": "video" }
      ],
      "description": "Type of WhatsApp message received"
    },
    {
      "name": "message_content",
      "label": "Message Content",
      "type": "string",
      "fieldType": "textarea",
      "description": "Content of the WhatsApp message"
    },
    {
      "name": "timestamp",
      "label": "Timestamp",
      "type": "datetime",
      "fieldType": "datetime",
      "description": "When the message was received"
    },
    {
      "name": "processed",
      "label": "Processed",
      "type": "bool",
      "fieldType": "checkbox",
      "description": "Whether the message has been processed"
    }
  ]
}
